<% if ENV['com.nocturnalcode.RailsAssistant'].present? %>

#rails-assistant {
  height: 25px;
	position: fixed;
	bottom: 0px;
	right: 0px;
	margin: 3px;
	
	opacity:0.6;
  filter: alpha(opacity=60);
}

#rails-assistant.connected {
  opacity:1.0;
  filter: alpha(opacity=100);
}

#rails-assistant > img {
  width: 25px;
  height: 25px;
  float: right;
}

#rails-assistant > p {
  display: block;
  width: 200px;
}

<% end %>